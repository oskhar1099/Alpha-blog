<%= render 'shared/errors', obj: @article %>

<div class='form-group'>
  <div class='col-xs-12'>
    <%= form_for @article do |f| %>
    <div class="row">
      <div class="control-label col-sm-2">
        <%= f.label :title, class: "control-label col-sm-2"%>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true%>
      </div>
    </div>
  </div>
</div>
<div class='form-group'>
  <div class='col-xs-12'>
    <div class="row">
      <div class="control-label col-sm-2">
        <%= f.label :description, class:"control-label col-sm-2"%>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
      </div>
    </div>
  </div>
</div>

<div class='form-group'>
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class:"btn btn-primary active" %>
  </div>
</div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">

[
<%= link_to "Cancel request and return to articles listing", articles_path %>
]

</div>
